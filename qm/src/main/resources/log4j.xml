<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">

<log4j:configuration>

  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
             value="%d{yyyyMMddHHmmss} %-5p[%t] %c{2}: %m%n" />
    </layout>
  </appender>

    <appender name="PLANMERGE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/home/hadoop/yangbo/qm.log" />
        <param name="Append" value="true" />
        <param name="Threshold" value="info" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyyMMddHHmmss} %-5p[%t] %c{2}:
%m%n" />
        </layout>
    </appender>

  <logger name="com.xingcloud.qm">
    <level value="info" />
    <appender-ref ref="CONSOLE" />
  </logger>
  <logger name="com.xingcloud.qm.service.PlanMerge">
      <level value="debug" />
      <appender-ref ref="PLANMERGE" />
  </logger>

</log4j:configuration>
